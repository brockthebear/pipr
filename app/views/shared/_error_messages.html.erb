<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Oh no! Your form contains <%= pluralize(object.errors.count, "error") %>. Try again?
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>